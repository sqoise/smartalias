{
  "name": "smartlias-backend",
  "version": "1.0.0",
  "description": "Backend API for SMART LIAS",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test": "jest",
    "pm2:start": "pm2 start server.js --name smartlias-api --watch --ignore-watch 'logs node_modules'",
    "pm2:stop": "pm2 stop smartlias-api",
    "pm2:restart": "pm2 restart smartlias-api",
    "pm2:delete": "pm2 delete smartlias-api",
    "pm2:status": "pm2 list",
    "pm2:logs": "pm2 logs smartlias-api",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "express",
    "api",
    "barangay",
    "management-system"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.57.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "fs-extra": "^11.3.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "sharp": "^0.34.4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
